{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "jsx": "react",
        "allowJs": true,
        "outDir": "./docs",
        "isolatedModules": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@lib/*": ["lib/*"]
        }
    },
    "include": ["./lib/", "./src/", "globals.d.ts"]
}
